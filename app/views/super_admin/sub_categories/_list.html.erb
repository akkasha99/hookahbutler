<table class="table table-striped table-bordered table-hover" id="sub_category_table">
  <thead>
  <tr>
    <th>
      Name
    </th>
    <th>
      Parent Category
    </th>
    <th>
      Sub Category Item Count
    </th>
    <th>
      Created
    </th>
    <th style="width: 120px">
      Action
    </th>
  </tr>
  </thead>
  <% unless @sub_categories.blank? %>
      <tbody>
      <% @sub_categories.each_with_index do |sub_category, index| %>
          <tr class="odd gradeX">

            <td>
              <%= sub_category.name %>
            </td>
            <td>
              <%= sub_category.parent.name %>
            </td>
            <td class="center">
              <%= sub_category.items.size %>
            </td>
            <td class="center">
              <%= sub_category.created_at.strftime("%m-%d-%Y  %H:%M:%S %p") %>
            </td>
            <td>
              <% if sub_category.status == "active" %>
                  <a href="javascript:void(0)" style="text-decoration:none" onclick="disable_user('<%=sub_category.id%>', 'active')">
                    <span class="icon fa fa-power-off user_status" id="user_<%= sub_category.id %>"></span>
                  </a>
              <% else %>
                  <a href="javascript:void(0)" style="text-decoration:none" onclick="disable_user('<%=sub_category.id%>', 'inactive')">
                    <span class="icon fa user_status fa-rotate-right" id="user_<%= sub_category.id %>"></span>
                  </a>
              <% end %>
              &nbsp;&nbsp;&nbsp;
              <%= link_to "Edit", edit_super_admin_sub_category_path(sub_category.id), :style => "text-decoration:none" %>
              &nbsp;&nbsp;&nbsp;

              <%= link_to "View", super_admin_sub_category_path(sub_category.id), :style => "text-decoration:none" %>
            </td>
          </tr>
      <% end %>
      </tbody>
  <% end %>
</table>



