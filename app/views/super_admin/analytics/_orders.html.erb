<div data-rail-visible="0" data-always-visible="1" style="overflow: hidden; width: auto; height: 50px;" class="scroller" data-initialized="1">
  <div class="row">
    <div class="col-md-2 col-sm-3 col-xs-6 text-stat">
										<span class="label label-sm label-success">
										# Of Orders: </span>

      <h3><%= @total_orders %></h3>
    </div>
    <div class="col-md-2 col-sm-3 col-xs-6 text-stat">
										<span class="label label-sm label-info">
										Total Sales: </span>

      <h3><%= number_to_currency(@total_sales, precision: 2) %></h3>
    </div>
    <div class="col-md-2 col-sm-3 col-xs-6 text-stat">
										<span class="label label-sm label-danger">
										Avg Order: </span>

      <h3><%= number_to_currency(@avg_order.blank? ? 0 : @avg_order, precision: 2) %></h3>
    </div>
    <div class="col-md-2 col-sm-3 col-xs-6 text-stat">
										<span class="label label-sm label-warning">
										Avg Wait Time: </span>

      <h3><%= @avg_order_time.blank? ? 0 : ("%.2f" % @avg_order_time) %> Mins</h3>
    </div>
    <div class="col-md-2 col-sm-3 col-xs-6 text-stat">
										<span class="label label-sm label-warning">
										Refunds: </span>

      <h3><%= @refunded_order %></h3>
    </div>
    <div class="col-md-2 col-sm-3 col-xs-6 text-stat">
										<span class="label label-sm label-warning">
										Amount Refunded: </span>

      <h3><%= number_to_currency(@refunded_order_amount, precision: 2) %></h3>
    </div>

  </div>

</div>
