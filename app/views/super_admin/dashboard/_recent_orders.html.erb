
<!-- END PAGE HEADER-->
<!-- BEGIN PAGE CONTENT-->
<div class="row">
  <div class="col-md-12">
    <!-- BEGIN EXAMPLE TABLE PORTLET-->
    <div class="portlet box grey-cascade">
      <div class="portlet-title">
        <div class="caption">
          <i class="fa fa-globe"></i>Recent Orders
        </div>
        <div class="tools">
          <a href="javascript:;" class="collapse">
          </a>
          </a>
          <a href="javascript:;" class="reload">
          </a>
          <a href="javascript:;" class="remove">
          </a>
        </div>
      </div>
      <div class="portlet-body">
        <div id="">
          <table class="table table-striped table-bordered table-hover" id="recent_order_table">
            <thead>
            <tr>
              <th>
                Customer
              </th>
              <th>
                Store
              </th>
              <th>
                Amount
              </th>
            </tr>
            </thead>
            <% unless @recent_orders.blank? %>
                <tbody>
                <% @recent_orders.each_with_index do |order, index| %>
                    <% if index < 11 %>
                        <tr class="odd gradeX">

                          <td>
                            <%= order.user.full_name if  order.user %>
                          </td>
                          <td>
                            <%= order.shop.name if  order.shop %>
                          </td>
                          <td class="center">
                            <%= number_to_currency(order.total_amount, precision: 2) %>
                          </td>
                        </tr>
                    <% end %>
                <% end %>
                </tbody>
            <% end %>
          </table>
        </div>
      </div>
    </div>
    <!-- END EXAMPLE TABLE PORTLET-->
  </div>
</div>

