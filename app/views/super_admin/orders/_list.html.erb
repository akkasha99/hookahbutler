<table class="table table-striped table-bordered table-hover" id="order_table">
  <thead>
  <tr>
    <th>
      Customer
    </th>
    <th>
      Order ID
    </th>
    <th>
      Status
    </th>
    <th>
      Store
    </th>
    <th>
      Created
    </th>
    <th>
      Total
    </th>
    <th style="width: 120px">
      Action
    </th>
  </tr>
  </thead>
  <% unless @orders.blank? %>
      <tbody>
      <% @orders.each_with_index do |order, index| %>
          <tr class="odd gradeX">

            <td>
              <%= order.user.full_name if  order.user %>
            </td>
            <td>
              <%= order.id %>
            </td>
            <td>
              <%= order.status %>
            </td>
            <td class="center">
              <%= order.shop.name if   order.shop %>
            </td>
            <td class="center">
              <%= order.created_at.strftime("%m-%d-%Y  %H:%M:%S %p") %>
            </td>
            <td class="center">
              <% unless order.total_amount.blank? %>
                  $<%= "%.2f" % order.total_amount if  order.total_amount %>
              <% else %>
                  $<%= "%.2f" % 0 %>
              <% end %>
            </td>
            <td>
              &nbsp;&nbsp;&nbsp;
              <%= link_to "Edit", edit_super_admin_order_path(order.id), :style => "text-decoration:none" %>
              &nbsp;&nbsp;&nbsp;

              <%= link_to "View", super_admin_order_path(order.id), :style => "text-decoration:none" %>
            </td>
          </tr>
      <% end %>
      </tbody>
  <% end %>
</table>


