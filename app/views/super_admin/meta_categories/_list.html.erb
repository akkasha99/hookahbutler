<table class="table table-striped table-bordered table-hover" id="sub_category_table">
  <thead>
  <tr>
    <th>
      Name
    </th>
    <th>
      Parent Category
    </th>

    <th>
      Created
    </th>
    <th style="width: 120px">
      Action
    </th>
  </tr>
  </thead>
  <% unless @meta_categories.blank? %>
      <tbody>
      <% @meta_categories.each_with_index do |meta_category, index| %>
          <tr class="odd gradeX">

            <td>
              <%= meta_category.name %>
            </td>
            <td>
              <%= meta_category.category.name %>
            </td>

            <td class="center">
              <%= meta_category.created_at.strftime("%m-%d-%Y  %H:%M:%S %p") %>
            </td>
            <td>
              &nbsp;&nbsp;&nbsp;
              <%= link_to "Edit", edit_super_admin_meta_category_path(meta_category.id), :style => "text-decoration:none" %>
              &nbsp;&nbsp;&nbsp;

              <%= link_to "View", super_admin_meta_category_path(meta_category.id), :style => "text-decoration:none" %>
            </td>
          </tr>
      <% end %>
      </tbody>
  <% end %>
</table>



