<table class="table table-striped table-bordered table-hover" id="category_table">
  <thead>
  <tr>
    <th>
      Name
    </th>
    <th>
      Price
    </th>
    <th>
      Created
    </th>
    <th style="width: 120px">
      Action
    </th>
  </tr>
  </thead>
  <% unless @sugars.blank? %>
      <tbody>
      <% @sugars.each_with_index do |sugar, index| %>
          <tr class="odd gradeX">

            <td>
              <%= sugar.name %>
            </td>
            <td class="center">
              <%= sugar.created_at.strftime("%m-%d-%Y  %H:%M:%S %p") %>
            </td>
            <td>
              <% if sugar.is_deleted == false %>
                  <a href="javascript:void(0)" style="text-decoration:none" onclick="delete_sugar('<%=sugar.id%>', true)">
                    <span class="icon fa fa-power-off user_status" id="user_<%= sugar.id %>"></span>
                  </a>
              <% else %>
                  <a href="javascript:void(0)" style="text-decoration:none" onclick="delete_sugar('<%=sugar.id%>', false)">
                    <span class="icon fa user_status fa-rotate-right" id="user_<%= sugar.id %>"></span>
                  </a>
              <% end %>
              &nbsp;&nbsp;&nbsp;
              <%= link_to "Edit", edit_super_admin_sugar_path(sugar.id), :style => "text-decoration:none" %>
              &nbsp;&nbsp;&nbsp;

              <%= link_to "View", super_admin_sugar_path(sugar.id), :style => "text-decoration:none" %>

            </td>
          </tr>
      <% end %>
      </tbody>
  <% end %>
</table>


